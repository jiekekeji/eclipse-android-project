<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phone_product_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/base_margin"
    android:background="@drawable/shape_border"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/adapter_point_record_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:gravity="center_vertical"
        android:padding="@dimen/base_padding"
        android:text="主任务" />

    <LinearLayout
        android:id="@+id/adapter_point_record_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/adapter_point_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:padding="@dimen/base_padding"
            android:singleLine="true"
            android:text="2015-10-31 11:11" />

        <TextView
            android:id="@+id/adapter_point_record_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adapter_point_record_content"
            android:gravity="center"
            android:padding="@dimen/base_padding"
            android:text="积分:+10002" />
    </LinearLayout>

</LinearLayout>