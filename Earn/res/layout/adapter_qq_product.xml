<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_border" >

    <ImageView
        android:id="@+id/adapter_qq_product_img"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_app_img_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_qq_product_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/adapter_qq_good_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:gravity="center"
            android:padding="3dp"
            android:singleLine="true"
            android:text="优惠价" />

        <TextView
            android:id="@+id/adapter_qq_unit_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:gravity="center"
            android:padding="3dp"
            android:singleLine="true"
            android:text="商品价格" />

        <TextView
            android:id="@+id/adapter_qq_unit_point"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:gravity="center"
            android:padding="3dp"
            android:singleLine="true"
            android:text="优惠价" />
    </LinearLayout>

</RelativeLayout>