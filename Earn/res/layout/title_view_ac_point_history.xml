<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_view_height"
    android:background="@color/orange"
    tools:context="com.jk.earn.MainActivity" >

    <ImageView
        android:id="@+id/ac_history_point_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/base_margin_left"
        android:background="@drawable/icon_total_jt_zuo"
        android:gravity="center" />

    <TextView
        android:id="@+id/ac_point_history_current_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/title_ac_point_history_recharge"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ac_point_point_op_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/base_margin_right"
        android:gravity="center"
        android:text="@string/title_ac_point_history_earn"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>