<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phone_product_tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_phone_product" >

    <TextView
        android:id="@+id/adapter_phone_product_cardworth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/text_view_padding"
        android:singleLine="true"
        android:text="商品价格"
        android:textColor="@drawable/selector_text_phone_product"
        android:textSize="@dimen/base_text_size" />

    <TextView
        android:id="@+id/adapter_phone_product_cardworth_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_phone_product_cardworth"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:text="优惠价"
        android:textColor="@drawable/selector_text_phone_product" />

</RelativeLayout>