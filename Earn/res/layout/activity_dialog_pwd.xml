<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_border"
    tools:context="com.jk.earn.MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/ac_dialog_pwd_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/base_margin"
            android:background="@drawable/shape_border"
            android:inputType="textPassword"
            android:padding="@dimen/base_padding" />

        <EditText
            android:id="@+id/ac_dialog_pwd_pwd_confire_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac_dialog_pwd_pwd_et"
            android:layout_margin="@dimen/base_margin"
            android:background="@drawable/shape_border"
            android:inputType="textPassword"
            android:padding="@dimen/base_padding" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac_dialog_pwd_pwd_confire_et"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ac_dialog_pwd_confire_modify_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ac_dialog_pwd_pwd_confire_et"
                android:layout_margin="@dimen/base_margin"
                android:layout_weight="100"
                android:background="@drawable/shape_border"
                android:gravity="center"
                android:padding="@dimen/base_padding"
                android:text="确认修改" />

            <TextView
                android:id="@+id/ac_dialog_pwd_cancel_modify_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ac_dialog_pwd_confire_modify_btn"
                android:layout_margin="@dimen/base_margin"
                android:layout_weight="100"
                android:background="@drawable/shape_border"
                android:gravity="center"
                android:padding="@dimen/base_padding"
                android:text="取消修改" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>